# Contributor: Dave Reisner <d@falconindy.com>

pkgname=burp
pkgver=1.3.2
pkgrel=1
pkgdesc="A simple AUR uploader"
arch=('i686' 'x86_64')
url="http://github.com/falconindy/burp"
license=('GPL')
makedepends=('curl')
source=("http://github.com/downloads/falconindy/$pkgname/$pkgname-$pkgver.tar.gz")

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make || return 1
}

package() {
  depends=('curl')
  conflicts=('burp-git')

  cp "$srcdir/burp.bash_completion" "$srcdir/$pkgname-$pkgver/"
  cd $srcdir/$pkgname-$pkgver
  make PREFIX=/usr DESTDIR=${pkgdir} MANPREFIX=/usr/share/man install

}

# vim: ft=sh syn=sh
md5sums=('e518e3b39de439b3bde2821d34b912b3')
