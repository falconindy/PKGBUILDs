# Contributor: Dave Reisner <d@falconindy.com>

pkgname=initscripts-systemd-git
pkgver=VERSION
pkgrel=1
pkgdesc="System initialization/bootup scripts. Tailored for use with systemd."
arch=('x86_64' 'i686')
url="http://www.github.com/falconindy/initscripts-systemd"
license=('GPL')
groups=('systemd')
depends=('systemd')
makedepends=('git')
provides=('initscripts')
conflicts=('initscripts')
backup=(etc/rc.local etc/rc.local.shutdown)
install=initscripts.systemd

_gitroot="git://github.com/falconindy/initscripts-systemd.git"
_gitname="initscripts-systemd"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package() {
  cd "$srcdir/$_gitname-build"

  make DESTDIR=$pkgdir/ install
}
